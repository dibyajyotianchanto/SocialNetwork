<h2 class="text-center"><%=@search%> 's search result</h2>
<h4><%=@users.size()%> people in total</h4>
<div class="row row-cols-1 row-cols-md-3">
 <%@users.each do |user|%>
  <div class="col mb-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"> <%= link_to user.fullname , user_path(user.id) %></h5>
      </div>
    </div>
  </div>
  <%end%>
</div>



<div class="btn btn-dark"><%= link_to 'Back to My Profile', user_path(current_user.id) %></div>